generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model BookingNFT {
  id Int @id @default(autoincrement())
  objectId String @unique
  minter String
  room String
  nights Int
  checkOutDate DateTime

  @@index([minter])
  @@index([room])
}

model Proposal {
  id Int @id @default(autoincrement())
  objectId String @unique
  title String
  creator String
  description String
  votesFor Int @default(0)
  votesAgainst Int @default(0)
  
  @@index([title])
}

/// Saves the latest cursor for a given key.
model Cursor {
  id String @id
  eventSeq String
  txDigest String
}
